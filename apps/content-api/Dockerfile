# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build content-api`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t content-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system content-api && \
          adduser --system -G content-api content-api

COPY dist/apps/content-api content-api
RUN chown -R content-api:content-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix content-api --omit=dev -f install

CMD [ "node", "content-api" ]
