# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t editor-api`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3001

WORKDIR /app

RUN addgroup --system editor-api && \
          adduser --system -G editor-api editor-api

COPY dist/apps/editor-api editor-api
RUN chown -R editor-api:editor-api .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix editor-api --omit=dev -f install

CMD [ "node", "editor-api" ]
